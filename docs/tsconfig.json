{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@zerodp/griddie": ["./../src"],
      "@zerodp/griddie/*": ["./../src/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@stores/*": ["./src/stores/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@snippets": ["./src/snippets"],
      "@snippets/*": ["./src/snippets/*"]
    },
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["./src", "./vite.d.ts", "./node_modules/@types"]
}
